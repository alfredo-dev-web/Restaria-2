<script>
  document.addEventListener('DOMContentLoaded', function () {
    const container = document.querySelector('.cont_emailecell');
    const boxes = container.children;

    if (container && boxes.length > 0) {
      setTimeout(() => {
        const containerWidth = container.clientWidth;
        const firstBoxWidth = boxes[0].offsetWidth;

        // Centra il primo riquadro rispetto a "cont_emailecell"
        const centerPosition = containerWidth / 2 - firstBoxWidth / 2;
        container.scrollLeft = boxes[0].offsetLeft - centerPosition;
      }, 100); // Piccolo ritardo per garantire il caricamento
    }
  });

  document.addEventListener('DOMContentLoaded', function () {
    const container = document.querySelector('.cont_emailecell');
    let startX, scrollLeft;

    if (container) {
      container.addEventListener('touchstart', (e) => {
        startX = e.touches[0].pageX;
        scrollLeft = container.scrollLeft;
      });

      container.addEventListener('touchmove', (e) => {
        e.preventDefault();
        const x = e.touches[0].pageX;
        const walk = (startX - x) * 2; // Velocità dello swipe
        container.scrollLeft = scrollLeft + walk;
      });
    }
  });
</script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    var justone = false;
    const ul = document.getElementById('cont_emailecell');

    function isPartiallyInViewport(el) {
      const rect = el.getBoundingClientRect();
      return rect.bottom < window.innerHeight;
    }

    window.addEventListener('scroll', () => {
      if (isPartiallyInViewport(ul) && !justone) {
        justone = true;
        
        setTimeout(() => {
            ul.scrollBy({
          left: 150,
          top: 0,
          behavior: 'smooth',
        });
          }, 1000);
      }
    });
  });
</script>

